    <div class="tab-content">
        <div id="formato" class="tab-pane fade in active">
            <div ng-controller="FormatoController" ng-init="Iniciar()">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title">
                            Formatos <span class="badge" ng-bind="ListaFormato.length"></span>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-condensed">
                            <tr>
                                <th>Título</th>
                                <th>Fecha</th>
                                <th>Estado</th>
                                <th><button class="btn btn-xs btn-success" ng-click="Crear()"><span class="glyphicon glyphicon-plus"></span></button></th>
                            </tr>
                            <tr ng-repeat="elemento in ListaFormato">
                                <td ng-bind="elemento.DescripcionTitulo"></td>
                                <td ng-bind="elemento.IndicadorEstado"></td>
                                <td ng-bind="elemento.FechaRegistro"></td>
                                <th>
                                    <button class="btn btn-xs btn-warning" ng-click="Modificar(elemento)"><span class="glyphicon glyphicon-pencil"></span></button>
                                    <button class="btn btn-xs btn-danger"><span class="glyphicon glyphicon-remove"></span></button>
                                </th>
                                <tr>
                        </table>
                    </div>
                </div>
                <div class="modal fade" id="modalFormato">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <div class="panel-title">
                                            Ingrese los datos necesarios
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="form">
                                            <div class="form-group">
                                                <label class="control-label">Título:</label>
                                                <input class="form-control" type="text" ng-model="Modelo.DescripcionTitulo">
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Contenido:</label>
                                                <textarea class="form-control" type="text" ng-model="Modelo.DescripcionResena" cols="2" rows="2"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Url:</label>
                                                <div class="input-group">
                                                    <input class="form-control" type="text" ng-model="Modelo.DescripcionUrl">
                                                    <a class="input-group-addon" ng-href="{{ Modelo.DescripcionUrl }}" target="_blank">Ver</a>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Tipo de documento:</label>
                                                <select class="form-control" ng-model="Modelo.DescripcionFormato">
                                                    <option value="">Seleccione</option>
                                                    <option value="application/pdf">Pdf</option>
                                                    <option value="application/msword">Word</option>
                                                    <option value="application/vnd.ms-excel">Excel</option>
                                                    <option value="application/vnd.ms-powerpoint">Power Point</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Estado:</label>
                                                <input class="form-control-checkbox" type="checkbox" ng-model="Modelo.IndicadorEstado" ng-true-value="'A'" ng-false-value="'I'">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-footer">
                                        <button class="btn btn-sm btn-success" ng-click="Guardar()">Guardar <span class="glyphicon glyphicon-ok-circle"></span></button>
                                        <button class="btn btn-sm btn-default" ng-click="Cancelar()">Cancelar <span class="glyphicon glyphicon-remove-circle"></span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


@{
    ViewBag.Title = "Gestión de publicaciones";
}

<div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">
                Gestión de publicaciones
            </div>
        </div>
        <div class="panel-body">
            <blockquote>En esta ventana usted puede gestionar las publicaciones de su BOT.</blockquote>
        </div>
    </div>
</div>
<div>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#actualidad">Actualidades</a></li>
        <li><a data-toggle="tab" href="#comunicados">Comunicados</a></li>
    </ul>
    <div class="tab-content">
        <div id="actualidad" class="tab-pane fade in active">
            <div ng-controller="ActualidadController" ng-init="Iniciar()">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title">
                            Actualidades <span class="badge" ng-bind="ListaActualidad.length"></span>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-condensed">
                            <tr>
                                <th>Título</th>
                                <th>Fecha</th>
                                <th>Estado</th>
                                <th><button class="btn btn-xs btn-success" ng-click="Crear()"><span class="glyphicon glyphicon-plus"></span></button></th>
                            </tr>
                            <tr ng-repeat="elemento in ListaActualidad">
                                <td ng-bind="elemento.DescripcionTitulo"></td>
                                <td ng-bind="elemento.IndicadorEstado"></td>
                                <td ng-bind="elemento.FechaRegistro"></td>
                                <th>
                                    <button class="btn btn-xs btn-warning" ng-click="Modificar(elemento)"><span class="glyphicon glyphicon-pencil"></span></button>
                                    <button class="btn btn-xs btn-danger"><span class="glyphicon glyphicon-remove"></span></button>
                                </th>
                                <tr>
                        </table>
                    </div>
                </div>
                <div class="modal fade" id="modalActualidad">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <div class="panel-title">
                                            Ingrese los datos necesarios
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="form">
                                            <div class="form-group">
                                                <label class="control-label">Título:</label>
                                                <input class="form-control" type="text" ng-model="Modelo.DescripcionTitulo">
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Resumen:</label>
                                                <textarea class="form-control" type="text" ng-model="Modelo.DescripcionResumen" cols="2" rows="2"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Reseña:</label>
                                                <textarea class="form-control" type="text" ng-model="Modelo.DescripcionResena" cols="2" rows="3"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Imágen:</label>
                                                <div class="input-group">
                                                    <input class="form-control" type="text" ng-model="Modelo.DescripcionImagen">
                                                    <span class="input-group-addon" ng-click="Imagen()"><span class="glyphicon glyphicon-link"></span></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Url:</label>
                                                <div class="input-group">
                                                    <input class="form-control" type="text" ng-model="Modelo.DescripcionUrl">
                                                    <a class="input-group-addon" href="" ng-href="{{ Modelo.DescripcionUrl }}" target="_blank">Ver</a>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Estado:</label>
                                                <input class="form-control-checkbox" type="checkbox" ng-model="Modelo.IndicadorEstado" ng-true-value="'A'" ng-false-value="'I'">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-footer">
                                        <button class="btn btn-sm btn-success" ng-click="Guardar()">Guardar <span class="glyphicon glyphicon-ok-circle"></span></button>
                                        <button class="btn btn-sm btn-default" ng-click="Cancelar()">Cancelar <span class="glyphicon glyphicon-remove-circle"></span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="modalImagen">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <div class="panel-title">
                                            Imagen
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div>
                                            <img id="imagen" alt="Imagen" class="img-responsive img-thumbnail">
                                        </div>
                                    </div>
                                    <div class="panel-footer">
                                        <button class="btn btn-sm btn-default" data-dismiss="modal">Cerrar <span class="glyphicon glyphicon-remove-circle"></span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="comunicados" class="tab-pane fade">

        </div>
    </div>
</div>

@section scripts{
    <script src="~/Angular/Factories/Gestion/Publicacion/ActualidadFactory.js"></script>
    <script src="~/Angular/Controllers/Gestion/Publicacion/ActualidadController.js"></script>
}
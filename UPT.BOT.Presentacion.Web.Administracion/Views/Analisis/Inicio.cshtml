
@{
    ViewBag.Title = "Análisis";
}


<div class="row">
    <div class="col-xs-24">
        <h4><b>ANÁLISIS DE DATOS</b></h4>
        <div class="well"></div>
        <hr />
    </div>
</div>

<div ng-controller="AnalisisController" ng-init="Iniciar()">
    <div class="row">
        <div class="col-xs-24 col-sm-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Tareas de análisis
                    <span class="badge">3</span>
                </div>
                <div class="list-group">
                    <a href="#" class="list-group-item active">Clientes <span class="badge">2</span></a>
                    <a href="#" class="list-group-item">Mensajes guardados</a>
                    <a href="#" class="list-group-item">Historial</a>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-info btn-sm">Ayuda</button>
                </div>
            </div>
        </div>
        <div class="col-xs-24 col-sm-16">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Clientes en Facebook <span class="badge" ng-bind="ListaCliente.length"></span>
                </div>
                <table class="table table-condensed table-hover table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Código</th>
                        </tr>
                    </thead>
                    <tbody ng-repeat="Cliente in ListaCliente">
                        <tr>
                            <td ng-bind="Cliente.DescripcionNombre"></td>
                            <td ng-bind="Cliente.CodigoCliente"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-xs-24 col-sm-16">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Mensajes
                </div>
                <div class="panel-body">
                    <canvas id="bar" class="chart chart-bar"
                            chart-data="data" chart-labels="labels"></canvas>
                </div>
            </div>
        </div>
            
        </div>
</div>

@section scripts{
    <script src="~/Angular/Factories/Analisis/AnalisisFactory.js"></script>
    <script src="~/Angular/Controllers/Analisis/AnalisisController.js"></script>
